---
const steps = [
  {
    number: '01',
    title: 'Installieren',
    description: 'VS Code Extension oder CLI installieren. Ein Befehl genügt.',
    code: 'npm install -g @docguard/cli'
  },
  {
    number: '02',
    title: 'Scannen',
    description: 'Noyrax analysiert deinen Code und extrahiert Symbole, Signaturen und Dependencies.',
    code: 'noyrax scan'
  },
  {
    number: '03',
    title: 'Generieren',
    description: 'Automatische Markdown-Dokumentation für jedes Modul. Deterministisch und konsistent.',
    code: 'noyrax generate'
  },
  {
    number: '04',
    title: 'Validieren',
    description: 'Kontinuierliche Drift-Detection. Bei Code-Änderungen erfährst du sofort, wenn Docs veralten.',
    code: 'noyrax validate'
  }
];
---

<section id="how-it-works" class="py-24 bg-doc-navy relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-noyrax-blue/20 to-transparent"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        So einfach geht's
      </h2>
      <p class="text-xl text-slate-300 max-w-2xl mx-auto">
        Vier Schritte zu Dokumentation, die immer aktuell ist.
      </p>
    </div>
    
    <!-- Steps -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {steps.map((step, index) => (
        <div class="relative group">
          <!-- Connector Line (hidden on mobile and last item) -->
          {index < steps.length - 1 && (
            <div class="hidden lg:block absolute top-8 left-1/2 w-full h-0.5 bg-gradient-to-r from-noyrax-blue/50 to-transparent"></div>
          )}
          
          <div class="relative bg-slate-800/50 backdrop-blur border border-slate-700 rounded-xl p-6 hover:border-noyrax-blue/50 transition-all">
            <!-- Step Number -->
            <div class="w-12 h-12 bg-noyrax-blue rounded-xl flex items-center justify-center text-white font-mono font-bold mb-4">
              {step.number}
            </div>
            
            <!-- Content -->
            <h3 class="text-lg font-semibold text-white mb-2">{step.title}</h3>
            <p class="text-slate-400 text-sm mb-4">{step.description}</p>
            
            <!-- Code -->
            <code class="block px-3 py-2 bg-slate-900 rounded-lg text-success-green text-sm font-mono">
              $ {step.code}
            </code>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>


<section class="pt-32 pb-20 bg-gradient-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Logo -->
      <div class="mb-8 flex justify-center">
        <img src="/logo.svg" alt="Noyrax Logo" class="h-24 w-24" />
      </div>
      
      <!-- Headline -->
      <h1 class="text-5xl md:text-6xl font-headline font-bold text-doc-navy mb-6">
        Noyrax
      </h1>
      <p class="text-2xl md:text-3xl font-headline text-slate-700 mb-4">
        Semantic Brain für KI-gesteuerte Softwareentwicklung
      </p>
      <p class="text-xl text-slate-600 mb-8 max-w-2xl mx-auto">
        Automatische Dokumentation die nie veraltet - KI-Agenten verstehen deine Codebase sofort
      </p>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <a href="#quick-start" class="px-8 py-4 bg-noyrax-blue text-white rounded-lg hover:bg-opacity-90 transition-colors font-semibold text-lg shadow-lg hover:shadow-xl">
          Get Started Free
        </a>
        <a href="#demo" class="px-8 py-4 bg-white text-noyrax-blue border-2 border-noyrax-blue rounded-lg hover:bg-slate-50 transition-colors font-semibold text-lg">
          Watch Demo
        </a>
      </div>
      
      <!-- Terminal Demo Placeholder -->
      <div class="bg-slate-900 rounded-lg p-6 shadow-2xl max-w-3xl mx-auto">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-3 h-3 bg-red-500 rounded-full"></div>
          <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
          <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        </div>
        <div class="font-code text-green-400 text-sm">
          <div>$ npm install -g @noyrax/mcp-server</div>
          <div class="mt-2 text-slate-400">✓ Installation erfolgreich</div>
          <div class="mt-2 text-green-400">$ noyrax-mcp-server .</div>
          <div class="mt-2 text-slate-400">✓ MCP Server gestartet</div>
          <div class="mt-2 text-blue-400">→ System bereit für AI-Agenten</div>
        </div>
      </div>
    </div>
  </div>
</section>


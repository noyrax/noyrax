<section id="workflows" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-headline font-bold text-doc-navy mb-4">
        MCP-Server Workflows
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto">
        24 Tools für vollständige System-Analyse und autonome Entwicklung
      </p>
    </div>
    
    <!-- Orchestration Workflows -->
    <div class="mb-12">
      <h3 class="text-2xl font-headline font-semibold text-doc-navy mb-6">
        Orchestration Workflows
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-noyrax-blue">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Full Cycle</h4>
          <p class="text-sm text-slate-600">Scan → Generate → Validate → Ingest → Embeddings</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-noyrax-blue">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Generate & Ingest</h4>
          <p class="text-sm text-slate-600">Dokumentation generieren + in Datenbanken speichern</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-noyrax-blue">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Check Status</h4>
          <p class="text-sm text-slate-600">System-Status prüfen (docs/, databases, embeddings)</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-noyrax-blue">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Ensure Ready</h4>
          <p class="text-sm text-slate-600">Best-effort System-Ready-Check</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-noyrax-blue">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Onboard</h4>
          <p class="text-sm text-slate-600">Fremdsystem-Onboarding (15-30 Minuten Systemkarte)</p>
        </div>
      </div>
    </div>
    
    <!-- Autonomous Workflows -->
    <div class="mb-12">
      <h3 class="text-2xl font-headline font-semibold text-doc-navy mb-6">
        Autonomous Workflows
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-logo-accent">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Autonomous Feature</h4>
          <p class="text-sm text-slate-600">Autonome Feature-Entwicklung (Kontext sammeln + strukturierter Plan)</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-logo-accent">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Autonomous Refactoring</h4>
          <p class="text-sm text-slate-600">Autonomes Refactoring mit Impact-Analyse</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-logo-accent">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Autonomous Documentation</h4>
          <p class="text-sm text-slate-600">Autonome Dokumentations-Pflege (Gap Analysis + ADR-Generierung)</p>
        </div>
      </div>
    </div>
    
    <!-- Co-Partner Workflows -->
    <div>
      <h3 class="text-2xl font-headline font-semibold text-doc-navy mb-6">
        Co-Partner Workflows
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-success-green">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Co-Partner Plan</h4>
          <p class="text-sm text-slate-600">Strukturierte Anforderung → Plan mit Human-Checkpoints</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-success-green">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Co-Partner Feedback</h4>
          <p class="text-sm text-slate-600">Deterministische Heuristik (continue/revise_plan/rollback)</p>
        </div>
        <div class="bg-slate-50 rounded-lg p-6 border-l-4 border-success-green">
          <h4 class="font-headline font-semibold text-doc-navy mb-2">Co-Partner Rollback</h4>
          <p class="text-sm text-slate-600">Rollback-Guidance (Kommandos, keine Side-Effects)</p>
        </div>
      </div>
    </div>
  </div>
</section>


<section id="use-cases" class="py-20 bg-slate-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-headline font-bold text-doc-navy mb-4">
        Use Cases
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto">
        Für Entwickler, Teams und AI-Agenten
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Für Entwickler -->
      <div class="bg-white rounded-lg p-8 shadow-lg">
        <div class="w-16 h-16 bg-noyrax-blue rounded-lg flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-headline font-semibold text-doc-navy mb-4">
          Für Entwickler
        </h3>
        <ul class="space-y-3 text-slate-600">
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>Automatische Dokumentation die immer aktuell bleibt</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>Onboarding in Tagen statt Wochen</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>60-80% schnellere System-Analyse</span>
          </li>
        </ul>
      </div>
      
      <!-- Für Teams -->
      <div class="bg-white rounded-lg p-8 shadow-lg">
        <div class="w-16 h-16 bg-success-green rounded-lg flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-headline font-semibold text-doc-navy mb-4">
          Für Teams
        </h3>
        <ul class="space-y-3 text-slate-600">
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>€240k-450k Kosteneinsparung/Jahr für 10 Entwickler</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>40-60% weniger Bugs</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>200% schnellere Entwicklung</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>ROI: 483-907% im ersten Jahr</span>
          </li>
        </ul>
      </div>
      
      <!-- Für AI-Agenten -->
      <div class="bg-white rounded-lg p-8 shadow-lg">
        <div class="w-16 h-16 bg-logo-accent rounded-lg flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-headline font-semibold text-doc-navy mb-4">
          Für AI-Agenten
        </h3>
        <ul class="space-y-3 text-slate-600">
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>Verstehen Code-Systeme OHNE Vorwissen</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>Semantic Brain für bessere Code-Generierung</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>Keine Halluzinationen durch Reality-Driven Verification</span>
          </li>
          <li class="flex items-start">
            <span class="text-success-green mr-2">✓</span>
            <span>MCP-Server Integration für Cursor/Copilot</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>


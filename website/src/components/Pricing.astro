---
const plans = [
  {
    name: 'Free',
    price: '$0',
    period: 'forever',
    description: 'Perfekt f端r Einzelentwickler und Open Source Projekte.',
    features: [
      'VS Code Extension',
      'CLI & MCP-Server',
      'Local Drift-Detection',
      'Unlimited Projects',
      'Community Support'
    ],
    cta: 'Get Started',
    href: '#quick-start',
    highlighted: false,
    comingSoon: false
  },
  {
    name: 'Pro',
    price: '$19',
    period: '/month',
    description: 'F端r professionelle Entwickler mit erweiterten Bed端rfnissen.',
    features: [
      'Everything in Free',
      'Cloud Dashboard',
      'Email Drift-Alerts',
      'Priority Support',
      'Custom Themes',
      'API Access'
    ],
    cta: 'Coming Soon',
    href: '#',
    highlighted: true,
    comingSoon: true
  },
  {
    name: 'Team',
    price: '$49',
    period: '/seat/month',
    description: 'F端r Teams, die Dokumentation als Team-Effort betrachten.',
    features: [
      'Everything in Pro',
      'Team Analytics',
      'Slack/Teams Integration',
      'Shared Configurations',
      'Role-based Access',
      'Audit Logs'
    ],
    cta: 'Coming Soon',
    href: '#',
    highlighted: false,
    comingSoon: true
  }
];
---

<section id="pricing" class="py-24 bg-slate-900 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        Simple, transparente Preise
      </h2>
      <p class="text-xl text-slate-400 max-w-2xl mx-auto">
        Starte kostenlos. Upgrade wenn du mehr brauchst.
      </p>
    </div>
    
    <!-- Pricing Grid -->
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {plans.map((plan) => (
        <div class={`relative rounded-2xl p-8 ${
          plan.highlighted 
            ? 'bg-gradient-to-b from-noyrax-blue/20 to-slate-800 border-2 border-noyrax-blue shadow-xl shadow-noyrax-blue/10' 
            : 'bg-slate-800/50 border border-slate-700'
        }`}>
          {/* Popular Badge */}
          {plan.highlighted && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-noyrax-blue rounded-full text-sm font-semibold">
              Most Popular
            </div>
          )}
          
          {/* Plan Name */}
          <h3 class="text-xl font-semibold text-white mb-2">{plan.name}</h3>
          
          {/* Price */}
          <div class="mb-4">
            <span class="text-4xl font-bold text-white">{plan.price}</span>
            <span class="text-slate-400">{plan.period}</span>
          </div>
          
          {/* Description */}
          <p class="text-slate-400 text-sm mb-6">{plan.description}</p>
          
          {/* Features */}
          <ul class="space-y-3 mb-8">
            {plan.features.map(feature => (
              <li class="flex items-center gap-2 text-slate-300">
                <svg class="w-5 h-5 text-success-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          
          {/* CTA */}
          {plan.comingSoon ? (
            <button 
              disabled
              class="block w-full py-3 rounded-lg font-semibold text-center bg-slate-600 text-slate-400 cursor-not-allowed"
            >
              {plan.cta}
            </button>
          ) : (
            <a 
              href={plan.href}
              class={`block w-full py-3 rounded-lg font-semibold text-center transition-all ${
                plan.highlighted
                  ? 'bg-noyrax-blue hover:bg-blue-600 text-white'
                  : 'bg-slate-700 hover:bg-slate-600 text-white'
              }`}
            >
              {plan.cta}
            </a>
          )}
        </div>
      ))}
    </div>
    
    {/* Enterprise Note */}
    <div class="mt-12 text-center">
      <p class="text-slate-400 mb-4">
        Brauchst du mehr? <strong class="text-white">Enterprise</strong> mit SSO, Compliance Reports und dediziertem Support.
      </p>
      <a href="mailto:hello@noyrax.dev" class="inline-flex items-center gap-2 text-noyrax-blue hover:text-blue-400 transition-colors">
        Kontaktiere uns
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

